<?xml version="1.0"?>
<config>
    <modules>
        <A2bizz_Designer>
            <version>0.1.0</version>
        </A2bizz_Designer>
    </modules>
    <frontend>
        <routers>
            <designer>
                <use>standard</use>
                <args>
                    <module>A2bizz_Designer</module>
                    <frontName>designer</frontName>
                </args>
            </designer>
        </routers>
        <layout>
            <updates>
                <designer>
                    <file>a2bizz/designer.xml</file>
                </designer>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <designer>
                <use>admin</use>
                <args>
                    <module>A2bizz_Designer</module>
                    <frontName>designer</frontName>
                </args>
            </designer>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <designer module="designer">
                <title>Designer</title>
                <sort_order>71</sort_order>
                <children>
					<designs module="designer">
						<title>Manage Designs</title>
						<sort_order>100</sort_order>                
						<action>designer/adminhtml_designer</action>
					</designs>
                </children>                           						
            </designer>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>                        
                        <A2bizz_Designer>
                            <title>Designersoftware Module</title>
                            <sort_order>10</sort_order>
                        </A2bizz_Designer>						
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <designer>
                    <file>a2bizz/designer.xml</file>
                </designer>
            </updates>
        </layout>			
    </adminhtml>   
    <global>
        <cache>
            <types>
                <A2bizz_Designer module="A2bizz_Designer" translate="label description">
                    <label>Designer Software Cache</label>
                    <description>Uses Cache for Designer Software to make it easier and Convenient</description>
                    <tags>DESIGNER_SOFTWARE_CACHE</tags>
                </A2bizz_Designer>
            </types>
        </cache> 		
        <models>			
            <designer>
                <class>A2bizz_Designer_Model</class>
                <resourceModel>designer_mysql4</resourceModel>
                <catalog>
                    <rewrite>
                        <product>A2bizz_Designer_Model_Product</product>
                    </rewrite>
                </catalog>
            </designer>
            <designer_mysql4>
                <class>A2bizz_Designer_Model_Mysql4</class>
                <entities>
                    <designer>
                        <table>a2bizz_designer</table>
                    </designer>
               </entities>
            </designer_mysql4>
        </models>
        <resources>
            <designer_setup>
                <setup>
                    <module>A2bizz_Designer</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </designer_setup>
            <designer_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </designer_write>
            <designer_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </designer_read>
        </resources>
        <blocks>
            <designer>
                <class>A2bizz_Designer_Block</class>
            </designer>
        </blocks>
        <helpers>
            <designer>
                <class>A2bizz_Designer_Helper</class>
            </designer>
        </helpers>
    </global>    
</config>
